{
  "packages": [
    "argocd@latest",
    "oh-my-zsh@latest",
    "zsh@latest",
    "kubectl@latest",
    "gh@latest",
    "uv@latest"
  ],
  "shell": {
    "init_hook": [
      "[ ! -d .venv ] && uv venv",
      "source .venv/bin/activate",
      "export UV_LINK_MODE=copy",
      "echo 'Welcome to the GitOps Tutorial Dev Environment!'"
    ],
    "scripts": { 
      "setup-tools": [
        "uv pip install -r pyproject.toml",
        "curl -sL \"https://raw.githubusercontent.com/crossplane/crossplane/main/install.sh\" | sh > /dev/null",
        "mkdir -p ~/bin/ && mv crossplane ~/bin/",
        "echo 'export PATH=~/bin:$PATH' >> ~/.profile",
        "source ~/.profile",
        "echo \"Crossplane:\" $(crossplane version --client)"    
      ]
    }
  }
}
